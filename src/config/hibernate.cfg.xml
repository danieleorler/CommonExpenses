<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost/commonexpenses</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.default_schema">commonexpenses</property>
        <property name="show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
		<property name="hibernate.current_session_context_class">org.hibernate.context.ThreadLocalSessionContext</property>        
  
		<mapping class="com.dalendev.ce.table.Partecipate"></mapping>     
        <mapping class="com.dalendev.ce.table.User"></mapping>
       	<mapping class="com.dalendev.ce.table.Share"></mapping>
        <mapping class="com.dalendev.ce.table.Expense"></mapping>
        <mapping class="com.dalendev.ce.table.Project"></mapping>
    </session-factory>
</hibernate-configuration>
